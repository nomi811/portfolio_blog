<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <% if @post.image_file_name != nil %>
      <%= image_tag @post.image.url(:medium) %>
    <% end %>

    <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>
    <div id="content">
      <%= markdown @post.content %>
    </div>
    <% if user_signed_in? %>
      <div id='admin_links'>
        <%= link_to 'Edit Article', edit_post_path(@post) %>
        <%= link_to 'Delete Article', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <hr>

    <div id="share_box">
    <p>Share <%= @post.title %></p>

      <%= social_share_button_tag(@post.title) %>
    </div>

    <hr>

    <%= render 'disqus' %>

</div>

<br>
<br>
