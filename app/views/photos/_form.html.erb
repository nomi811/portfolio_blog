<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <br>
  <br>

  <div>
    <%= f.label :image %>
    <%= f.attachment_field :image %>

    <% if @photo.image_id? %>
      <%= image_tag attachment_url(@photo, :image, :fill, 100, 100) %>

      <%= f.check_box :remove_image %>
      <%= f.label :remove_image %>
    <% end %>
  </div>

  <br>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
